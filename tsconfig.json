{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "types": [
      "jest",
      "puppeteer",
      "jest-environment-puppeteer",
      "expect-puppeteer"
    ],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "lib": [
      "es2022",
      "es2022.error",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ],
}